@using SAKnowledgeBase.DataBase.Entities;

@model Question

<form asp-action="Edit" asp-controller="Question" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="row">
        <div class="col-lg-12">
            <div class="form-group">
                <label>Question Name:</label>
                <input asp-for="QuestionName" type="text" class="form-control required" placeholder="Enter Question name" tabindex="1">
                <label>ThemeId:</label>
                <input asp-for="ThemeId" type="int" class="form-control required" placeholder="Enter Theme Id" tabindex="1">
                <label>SequenceNum:</label>
                <input asp-for="SequenceNum" type="int" class="form-control required" placeholder="Enter Sequence number" tabindex="1">
            </div>

            <div class="form-group">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
            <div class="form-group">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
            <div class="card-footer">
                <center>
                    <button type="submit" class="btn btn-warning">
                        Update Question
                    </button>
                    <a asp-action="Index" asp-controller="Question" class="btn btn-secondary">
                        Cancel
                    </a>
                </center>
            </div>
        </div>
    </div>
</form>

