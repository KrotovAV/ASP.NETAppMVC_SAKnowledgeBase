@using SAKnowledgeBase.DataBase.Entities;

@model List<Question>
<div class="row" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-1 mt-2">
       @*      <h5>Question</h5> *@
        </div>
        <div class="col-md-1">
            <a asp-action="Create" asp-controller="Question" class="btn btn-success">
                Create
            </a>
        </div>

        <div class="col-md-6">
            <form asp-controller="Question" asp-action="Index" method="get">
                <div class="input-group">
                    <select class="form-select" id="inputSearch" asp-items="ViewBag.Themes" name="searchTheme">
                        <option selected value=""> - Choose Theme - </option>
                    </select>

                    <input name="searchFor" class="form-control" id="inputSearch" aria-describedby="inputSearchComment" aria-label="Search">
                    <button class="btn btn-outline-secondary" type="submit" id="inputSearch">Search</button>
                    <a class="btn btn-outline-primary" type="button" asp-controller="Question" asp-action="index">Reset Search</a>
                </div>
            </form>
        </div>

        <div class="col-md-2">
            <a asp-action="UploadQuestionExcel" asp-controller="File" class="btn btn-success">
                Upload Excel File
            </a>
        </div>
        <div class="col-md-2">
            <form asp-action="ExportQuestionExcel" asp-controller="File" method="post">
                <button type="submit" class="btn btn-success">
                    Generate Excel File
                </button>
            </form>
        </div>
    </div>
    <div class="col-md-12">
        <table class="table">
            <thead>
                <tr>
                    <td>Manage</td>
                    <td>Id</td>
                    <td>Question Name</td>
                    <td>Sequence Num </td>
                    <td>Theme Name</td>
                    <td>Contains</td>
                    <td>Info</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <a asp-action="Edit" asp-controller="Question" class="btn btn-warning mt-1" asp-route-id="@item.Id">
                                Edit
                            </a>
                            <a asp-action="Delete" asp-controller="Question" class="btn btn-danger mt-1" asp-route-id="@item.Id">
                                Delete
                            </a>
                        </td>
                        <td>@item.Id</td>
                        <td>@item.QuestionName</td>
                        <td>@item.SequenceNum</td>
                        <td>@item.Theme.ThemeName</td>
                        <td>@item.Infos.Count</td>
                        <td>
                            <a asp-action="Details" asp-controller="Question" class="btn btn-primary" asp-route-id="@item.Id">
                                View
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
  
</div>


