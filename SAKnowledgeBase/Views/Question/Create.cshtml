@using SAKnowledgeBase.Models.ViewModel

@model QuestionCreateViewModel

<form asp-action="Create" asp-controller="Question" method="post">
    <div class="row">
        <div class="col-lg-12">
            <div class="form-group">
                <label>Question Name:</label>
                <input asp-for="QuestionName" type="text" class="form-control required" placeholder="Enter Question name" tabindex="1">
            </div>
            <div class="form-group">
                <label>SequenceNum:</label>
                <input asp-for="SequenceNum" type="text" class="form-control required" placeholder="Enter SequenceNum" tabindex="1">
            </div>
            
            <div class="form-group">
                <label>Theme:</label>
                <select class="form-select" asp-items="ViewBag.Themes" asp-for="@Model.ThemeId">
                    <option> --- Choose Theme --- </option>
                </select>
                <span asp-validation-for="@Model.ThemeId" class="text-danger"></span>
            </div>

            

            <div class="form-group">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
            <div class="card-footer">
                <center>
                    <button type="submit" class="btn btn-primary">
                        Create Question
                    </button>
                    <a asp-action="Index" asp-controller="Question" class="btn btn-secondary">
                        Cancel
                    </a>
                </center>
            </div>
        </div>
    </div>
</form>

