@using SAKnowledgeBase.DataBase.Entities;

@model Question

<div class="row">
    <div class="col-lg-4 offset-lg-4 col-md-6 offset-md-3 col-12">
        <div class="card">
            <div class="card-header">
                <div class="alert alert-danger">
                    <h5>You can't delete</h5>
                </div>
                Question ID @Model.Id
            </div>
            <div class="card-body">
                <p class="card-text">Question Name: @Model.QuestionName</p>
                <div class="alert alert-danger">
                    <h5>To delete this question, you need to edit infos.</h5>
                </div>
                @if (@Model.Infos.Count != 0)
                {
                    <label>Info List:</label>
                    <table class="table">
                        <thead>
                            <tr>
                                <td>QuestionName</td>
                                <td>Info</td>
                                <td>Manage</td>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Infos)
                            {
                                <tr>
                                    <td>@item.Text</td>
                                    <td>
                                        <a asp-action="Details" asp-controller="Info" class="btn btn-primary" asp-route-id="@item.Id">
                                            View
                                        </a>
                                    </td>
                                    <td>
                                        <a asp-action="Edit" asp-controller="Info" class="btn btn-warning" asp-route-id="@item.Id">
                                            Edit
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p class="card-text">No info in question.</p>
                }
                <a class="btn btn-secondary" asp-controller="Question" asp-action="Index">Cancel</a>
            </div>

        </div>
    </div>
</div>

