@using SAKnowledgeBase.DataBase.Entities;

@model List<Theme>


<div class="row">
    <div class="col-md-8">
        <a asp-action="Create" asp-controller="Theme" class="btn btn-success">
            Create
        </a>
    </div>
    <div class="col-md-2">
        <a asp-action="UploadThemeExcel" asp-controller="File" class="btn btn-success">
            Upload Excel File
        </a>
    </div>

    <div class="col-md-2">
        <form asp-action="ExportThemeExcel" asp-controller="File" method="post">
            <button type="submit" class="btn btn-success">
                Generate Excel File
            </button>
        </form> 
    </div>
     
    
    <div class="col-md-12">
        <table class="table">
            <thead>
                <tr>
                    <td>Manage</td>
                    <td>Id</td>
                    <td>Theme Name</td>
                    <td>Sequence Num </td>
                    <td>Contains Questions</td>
                    <td>Info</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <a asp-action="Edit" asp-controller="Theme" class="btn btn-warning" asp-route-id="@item.Id">
                                Edit
                            </a>
                            <a asp-action="Delete" asp-controller="Theme" class="btn btn-danger" asp-route-id="@item.Id">
                                Delete
                            </a>
                        </td>
                        <td>@item.Id</td>
                        <td>@item.ThemeName</td>
                        <td>@item.SequenceNum</td>
                        <td>@item.Questions.Count</td>
                        <td>
                            <a asp-action="Details" asp-controller="Theme" class="btn btn-primary" asp-route-id="@item.Id">
                                View
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

