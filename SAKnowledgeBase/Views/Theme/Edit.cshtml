@using SAKnowledgeBase.Models.ViewModel

@model ThemeEditViewModel

<form asp-action="Edit" asp-controller="Theme" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="row">
        <div class="col-lg-12">
            <div class="form-group">
                <label>Theme Name:</label>
                <input asp-for="ThemeName" type="text" class="form-control required" placeholder="Enter Theme name" tabindex="1">
            </div>
            <div class="form-group">
                <label>SequenceNum:</label>
                <input asp-for="SequenceNum" type="text" class="form-control required" placeholder="Enter SequenceNum" tabindex="1">
            </div>

            <div class="form-group">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
            <div class="card-footer">
                <center>
                    <button type="submit" class="btn btn-warning">
                        Update Theme
                    </button>
                    <a asp-action="Index" asp-controller="Theme" class="btn btn-secondary">
                        Cancel
                    </a>
                </center>
            </div>
        </div>
    </div>
</form>
