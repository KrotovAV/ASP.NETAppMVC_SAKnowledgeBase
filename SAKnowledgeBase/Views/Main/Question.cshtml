@using SAKnowledgeBase.Models.ViewModel;

@model MainInfoModel

<div class="row">
    <div class="col-md-12">
        @foreach (var item in Model.Themes)
        {
            <a class="btn btn-primary" asp-action="Details" asp-controller="Main" asp-route-id="@item.Id">
                @item.ThemeName
            </a>
        }
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-12">
        @foreach (var question in Model.Questions)
        {
            <a class="navbar-brand" asp-area="" asp-action="Question" asp-controller="Main" asp-route-id="@question.Id">
                @question.QuestionName
            </a>
        }
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-12">
        @foreach (var item in Model.Infos)
        {
            <font size="@item.TextFormat.TextSize">
                @if (@item.TextFormat.Bold == true)
                {
                    @if (@item.TextFormat.Tilt == true)
                    {
                        <i>  <b>@item.Text</b> </i>
                    }
                    else
                    {
                        <b>@item.Text</b>
                    }
                }
                else
                {
                    @if (@item.TextFormat.Tilt == true)
                    {
                        <i>@item.Text</i>
                    }
                    else
                    {
                        @item.Text
                    }
                }
                <br />
            </font>
        }
    </div>
</div>
