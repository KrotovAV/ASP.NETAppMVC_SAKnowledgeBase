@using SAKnowledgeBase.Models.ViewModel

@model UserEditViewModel

<form asp-action="Edit" asp-controller="AdminManagment" enctype="multipart/form-data" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="row">
        <div class="col-lg-12">
            <div class="form-group">
                <label>Email:</label>
                <input asp-for="@Model.Name" type="text" class="form-control required" placeholder="Enter email" tabindex="1">
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>To change Password, enter new Password:</label>
                <input asp-for="NewPassword" type="text" class="form-control" placeholder="Enter new Password" tabindex="1">
                <span asp-validation-for="@Model.NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Role:</label> 
                <br />
                @foreach (var type in ViewBag.RoleTypesRadio)
                {
                    <input type="radio" asp-for="Role" value="@((int)type)" checked="@(type == Model?.Role)" />
                    <label asp-for="Role">@type</label>
                    <br />
                }
            </div>
            <div class="form-group">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
            <div class="card-footer">
                <center>
                    <button type="submit" class="btn btn-warning">
                        Update user
                    </button>
                    <a asp-action="Index" asp-controller="AdminManagment" class="btn btn-secondary">
                        Cancel
                    </a>
                </center>
            </div>
        </div>
    </div>
</form>

