@using SAKnowledgeBase.DataBase.Entities;

@model Info

<form asp-action="Edit" asp-controller="Info" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="row">
        <div class="col-lg-12">
            <div class="form-group">
                <label>Text:</label>
                <input asp-for="Text" type="text" class="form-control required" placeholder="Enter text" tabindex="1">
                <label> QuestionId:</label>
                <input asp-for="QuestionId" type="text" class="form-control required" placeholder="Enter text" tabindex="1">
                <label> SequenceNum:</label>
                <input asp-for="SequenceNum" type="text" class="form-control required" placeholder="Enter text" tabindex="1">
                <label> FormatId:</label>
                <input asp-for="FormatId" type="text" class="form-control required" placeholder="Enter text" tabindex="1">
                <label> PhotoPath:</label>
                <input asp-for="PhotoPath" type="text" class="form-control required" placeholder="Enter text" tabindex="1">
                <label> Level:</label>
                <input asp-for="Level" type="text" class="form-control required" placeholder="Enter text" tabindex="1">
                <label> Link:</label>
                <input asp-for="Link" type="text" class="form-control required" placeholder="Enter text" tabindex="1">
            </div>

            <div class="form-group">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
            <div class="form-group">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
            <div class="card-footer">
                <center>
                    <button type="submit" class="btn btn-warning">
                        Update Info
                    </button>
                    <a asp-action="Index" asp-controller="Info" class="btn btn-secondary">
                        Cancel
                    </a>
                </center>
            </div>
        </div>
    </div>
</form>

