@using SAKnowledgeBase.DataBase.Entities;

@model Info

<form asp-action="Create" asp-controller="Info" method="post">
    <div class="row">
        <div class="col-lg-12">
            <div class="form-group">
                <label>Text:</label>
                <input asp-for="Text" type="text" class="form-control required" placeholder="Enter text" tabindex="1">
            </div>
            <div class="form-group">
                <label>QuestionId:</label>
                <input asp-for="QuestionId" type="text" class="form-control required" placeholder="Enter QuestionId" tabindex="1">
            </div>
            <div class="form-group">
                <label>SequenceNum:</label>
                <input asp-for="SequenceNum" type="text" class="form-control required" placeholder="Enter SequenceNum" tabindex="1">
            </div>
            <div class="form-group">
                <label>FormatId:</label>
                <input asp-for="FormatId" type="text" class="form-control required" placeholder="Enter FormatId" tabindex="1">
            </div>
            <div class="form-group">
                <label>PhotoPath:</label>
                <input asp-for="PhotoPath" type="text" class="form-control required" placeholder="Enter PhotoPath" tabindex="1">
            </div>
            <div class="form-group">
                <label>Level:</label>
                <input asp-for="Level" type="text" class="form-control required" placeholder="Enter Level" tabindex="1">
            </div>
            <div class="form-group">
                <label>Link:</label>
                <input asp-for="Link" type="text" class="form-control required" placeholder="Enter Link" tabindex="1">
            </div>


            <div class="form-group">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
            <div class="card-footer">
                <center>
                    <button type="submit" class="btn btn-primary">
                        Create Info
                    </button>
                    <a asp-action="Index" asp-controller="Info" class="btn btn-secondary">
                        Cancel
                    </a>
                </center>
            </div>
        </div>
    </div>
</form>

