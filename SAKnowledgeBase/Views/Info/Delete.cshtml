@using SAKnowledgeBase.DataBase.Entities;

@model Info

<form asp-action="DeleteConfirmed" asp-controller="Info" method="post" asp-append-version="true">
    <input type="hidden" asp-for="Id" />
    <div class="row">
        <div class="col-lg-4 offset-lg-4 col-md-6 offset-md-3 col-12">
            <div class="card">
                <div class="card-header">
                    <div class="alert alert-danger">
                        <h3>Are you sure you want to delete this?</h3>
                    </div>
                    Info ID @Model.Id
                </div>
                <div class="card-body">
                    <p class="card-text">Text Name: @Model.Text</p>
                    
                </div>
                <div class="card-footer">
                    <center>
                        <button type="submit" class="btn btn-danger">
                            Delete Info
                        </button>
                        <a asp-action="Index" asp-controller="Info" class="btn btn-secondary">
                            Cancel
                        </a>
                    </center>
                </div>
            </div>
        </div>
    </div>
</form>
